{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TimerPomoDuino",
            "type": "shell",
            "command": "cd TimerPomoDuino && arduino-cli compile --fqbn arduino:avr:nano:cpu=atmega328old TimerPomoDuino.ino",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Upload TimerPomoDuino",
            "type": "shell",
            "command": "arduino-cli upload -p /dev/ttyUSB0 --fqbn arduino:avr:nano:cpu=atmega328old TimerPomoDuino"
        }
    ]
}