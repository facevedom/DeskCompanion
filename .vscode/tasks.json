{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TimerPomoDuino",
            "type": "shell",
            "command": "cd TimerPomoDuino && arduino-cli compile --fqbn esp32:esp32:esp32 TimerPomoDuino.ino",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Upload TimerPomoDuino",
            "type": "shell",
            "dependsOn": [
                "Build TimerPomoDuino"
            ],
            "command": "arduino-cli upload -p /dev/ttyUSB0 --fqbn esp32:esp32:esp32 TimerPomoDuino"
        }
    ]
}